#!/sbin/sh
export OPENGAZIP="$3"
export OUTFD="/proc/self/fd/$2"
export TMP="/tmp"
ui_print() {
  echo "ui_print $1
    ui_print" >> $OUTFD
}
unzip -o "$OPENGAZIP" -d "$TMP"
set_perm() {
  chown "$1:$2" "$4"
  chmod "$3" "$4"
}
ch_con() {
  chcon -h u:object_r:system_file:s0 "$1"
}
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print " "
ui_print "Mountando partiçoes"
mount system
mount -a
ui_print "Partição montadas"
ui_print " "
ui_print " "
if [ -d /system/system ];then
    export SYSTEM=/system/system
    export AS_ROOT="A/B"
else
    export SYSTEM=/system
    export AS_ROOT="A Only"
fi
    ui_print "seu sistema é tipo: $AS_ROOT"
if [ -d $SYSTEM/product ];then
    ui_print "Indentificamos a pasta product no $SYSTEM"
    export PROD="$SYSTEM/product"
fi
if [ -d /product ];then
    ui_print "Indentificamos a pasta product na raiz"
    mount product
    export PROD="/product"
fi
if [ -d $SYSTEM/app/YouTube ];then
    ui_print "Removendo o YouTube do $SYSTEM/app"
    rm -rf $SYSTEM/app/YouTube
fi
if [ -d $SYSTEM/priv-app/YouTube ];then
    ui_print "Removendo o YouTube do $SYSTEM/priv-app"
    rm -rf $SYSTEM/priv-app/YouTube
fi
if [ -d $SYSTEM/priv-app/AudioFX ];then
    ui_print "Removendo o AudioFX"
    rm -rf $SYSTEM/priv-app/AudioFX
fi
if [ -d $PROD/priv-app/Camera2 ];then
    ui_print "Android Camera2 AOSP detectado. removendo"
    rm -rf "$PROD/priv-app/Camera2"
fi
if [ -d $PROD/app/Camera2 ];then
    ui_print "Android Camera2 AOSP detectado. removendo"
    rm -rf "$PROD/app/camera2"
fi
if [ -d $TMP/system ];then
    ui_print "Instalando alguns aplicativos"
    ui_print " "
    cp -rf $TMP/system/* $SYSTEM
else
    ui_print "alguns arquivos não foi extraidos. por favor execute de novo."
    exit
fi
if [ -e $PROD/media/bootanimation.zip ];then
    ui_print "Bootanimation no PRODUCT"
    rm -rf $PROD/media/bootanimation*
    cp $TMP/bootanimation/* $PROD/media/
fi
if [-e $SYSTEM/media/bootanimation.zip ];then
    ui_print "Bootanimation no SYSTEM"
    rm -rf $SYSTEM/media/bootanimation*
    cp $TMP/bootanimation/* $SYSTEM/media/
fi
if [ -e $PROD/media/bootanimation-dark.zip ];then
    rm -rf $PROD/media/bootanimation-dark.zip
fi
if [ -e $SYSTEM/media/bootanimation-dark.zip ];then
    rm -rf $PROD/media/bootanimation-dark.zip
fi
    ui_print " "
    ui_print "Backup do logo na pasta /data/backup/"
    mkdir /data/backup
    cp /dev/block/by-name/logo_a /data/backup/logo_a.bin
    rm /dev/block/by-name/logo_a
    cp /dev/block/by-name/logo_b /data/backup/logo_b.bin
    rm /dev/block/by-name/logo_b
    ui_print "Logo para o novo BootAnimation /-\ Moto G7 Plus"
    #logos
    cp -rf $TMP/logo.bin /dev/block/by-name/logo_a
    cp -rf $TMP/logo.bin /dev/block/by-name/logo_b
ui_print " "
ui_print "- Completo!"
ui_print "- © Sirherobrine23"
ui_print " "
ui_print " "
ui_print " "
exit