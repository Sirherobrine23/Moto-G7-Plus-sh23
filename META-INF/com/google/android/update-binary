#!/sbin/sh
export OPENGAZIP="$3"
export OUTFD="/proc/self/fd/$2"
export TMP="/tmp"
l="$TMP/bin"
ui_print() {
  echo "ui_print $1
    ui_print" >> $OUTFD
}
#setenforce 0
unzip -o "$OPENGAZIP" -d "$TMP"
set_progress() { echo "set_progress $1" >> $OUTFD; }
#Agora vem o script
#chmoad
set_perm() {
  chown "$1:$2" "$4"
  chmod "$3" "$4"
}
ch_con() {
  chcon -h u:object_r:system_file:s0 "$1"
}
#-/-/-/--//-/-/-/--/-/--/-/-/-/--/-/-/--/-/-
ui_print " "
ui_print " "
